<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<div class="container">
 <p id="notice"></p>
  <div class="row">
   <div class="col-xs-3">
    <%= render 'users/list',user:@user, book:@book_new   %>
   </div>
    <div class="col-xs-9"> 
     <h2>Book detail</h2>
      <table class="table">
        <%= form_for(@book) do |f| %>
         <%= render 'layouts/error_messages', model: f.object %>
        <tr>
          <td>
            <%=link_to (user_path(@book.user)) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>
             <%= @user.name %>
             <% end %>
          </td>
          <td> 
           <%=  @book.title %>
          </td>
          <td>
           <%=  @book.body %>
          </td>
          <% if @user == current_user %> 
           <td>
           <%= link_to "Edit",edit_book_path(@book.id), class:"btn btn-success" %>
           </td>
           <td>
            <%= link_to "Destroy", book_path(@book.id),method: :delete, class:"btn btn-danger"  %>
           </td>
          <% end %>
      </tr>  
       <% end %>
     </table>
    </div>
    
