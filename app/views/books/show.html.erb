<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<%= render 'users/list',user:@user, book:@book_new   %>
<div class="col-lg-9">   
 <h2>Book detail</h2>
 <table class="table table">
  <tr>
     <th></th>
     <th></th>
     <th></th>
     <th></th>
     <th></th>
  </tr>
    <%= form_for(@book) do |f| %>
     <%= render 'layouts/error_messages', model: f.object %>
    <tr>
      <td>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>
        <%=link_to (user_path(@book.user)) do %> 
         <%= @user.name %>
         <% end %>
      </td>
      <td> 
       <%=  @book.title %>
      </td>
      <td>
       <%=  @book.body %>
      </td>
      <% if @user == current_user %> 
       <td>
       <%= link_to "Edit",edit_book_path(@book.id), class:"btn btn-success" %>
       </td>
       <td>
        <%= link_to "Destroy", book_path(@book.id),method: :delete, class:"btn btn-danger"  %>
       </td>
      <% end %>
    </tr>  
    <p align="right">CopyRight Infratop.inc</p>
     <% end %>
   </table>
  </div>
  
