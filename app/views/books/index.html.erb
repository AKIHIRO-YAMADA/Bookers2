<%= render 'users/list',user:@user, book:@book %>
<div class="col-lg-9"> 
 <h3>Books</h3>
  <table class="table table-striped">
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
     <% @books.each do |book| %>
     <tr>
        <td>
         <%= link_to attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> 
        </td>
        <td>
          <%=link_to book.title, book_path(@user.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
     </tr>
        <% end %>

  </table>
</div>



   

   
 