<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="container">
   <p id="notice"></p> 
    <div class="row">
      <div class="col-md-6 col-sm-offset-3">
  <h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
   <%= render 'layouts/error_messages', model: f.object %>

    <h4>Title</h4>
    <%= f.text_field :title, class:"col-xs-12" %>
    <h4>Opinion</h4>
    <%= f.text_area :body, class:"col-xs-12" %><br>

    <%= f.submit 'Update Book', class:"btn btn-primary btn-block", style:"margin-top:40px;" %><br>
    <% end %>
    <%= link_to "Show",book_path(@book.id)  %>
    |
    <%= link_to "Back", books_path %>
     </div>
    </div>
   </div>
