<div class="container-fluid masonry-container">
 <div class="row">
　<div class="col-lg-9"> 
 　<h1>User info</h1>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  　<%= form_for(@user) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

    <h4>Name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                                                 
    <h4>Introduction</h4>
    <%= f.text_area :introduction %><br>
    <%= f.submit 'Update User' %><br>
    <% end %>
 　　　<p align="right">CopyRight Infratop.inc</p>
　 </div>
 </div>
</div>