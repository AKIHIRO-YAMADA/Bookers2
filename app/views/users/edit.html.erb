<div class="container">
 <p id="notice"></p> 
 　<h1>User info</h1>
  　<%= form_for(@user) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

    <h4>Name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                                                 
    <h4>Introduction</h4>
    <%= f.text_area :introduction %><br>
    <%= f.submit 'Update User' %><br>
    <% end %>
　 </div>
 </div>
</div>