<div class="container">
 <p id="notice"></p> 
 <div class="row">
  <div class="col-xs-3">
  <%= render 'users/list',user:@user ,book:@book %>
  </div>
  <div class="col-xs-9"> 
   <h2>Users</h2>
    <table class="table table">
    <thead>
         <th>image</th>
         <th>name</th>
         <th colspan="2"></th>
    </thead>
   <tboby>
     <% @users.each do |user| %>
     <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %> 
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
        <%= link_to "Show", user_path(user) %>
        </td> 
     </tr>
<% end %>
    </tboby>
   </table>
   </div>
  </div>
 </div>


