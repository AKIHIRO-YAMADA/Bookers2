  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<div class="container">
 <p id="notice"></p>
 <div class="row">
  <div class="col-xs-3">
   <%= render 'users/list',user:@user, book:@book %>
  </div>
   <div class="col-xs-9"> 
    <table class="table table-hover table-inverse">
      <thead>
          <h2>Books</h2>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
      </thead>
     <tboby>
       <% @books.each do |book| %>
       <tr>
          <td>
            <%= link_to (user_path(book.user)) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %> 
             <% end %>
          </td>
          <td>
            <%= link_to book.title,book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
       </tr>
         <% end %>
      </tboby>
     </table>
    </div>
   </div>
  </div>
