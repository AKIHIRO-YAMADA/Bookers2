   <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %> 
     <table class="table table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th> <%= user.introduction %></th>
        </tr>
      </tbody>
     </table>
         <% if user.id == current_user.id %>
          <%= link_to(edit_user_path(user), class:"col-xs-12 btn btn-default") do %>
              <i class="glyphicon glyphicon-wrench"></i>
          <% end %>
        <% end %>
    　<% if user.errors.any? %>
      　<div class="alert alert-warning">
        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
        <% end %>
        <h2>New book</h2>
        <%= form_for(book) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="field row">
        <h4>Title</h4>
        <%= f.text_field :title, class: "col-xs-12" %><br>
        </div>
        <div class="field row">
        <h4>Opinion</h4>
        <%= f.text_area :body, class: "col-xs-12" %><br>
        </div>
        <div class="action row">
        <%= f.submit 'Create Book',class:"btn btn-primary btn-block",style:"margin-top:20px;" %>
        </div>

         <% end %>